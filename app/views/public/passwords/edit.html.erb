<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3>パスワード再設定</h3>
  </div>
</div>

<div class="card_box">
  <%= form_with model: @client, url: client_password_path, method: :put do |f| %>
    <%= render "layouts/errors", obj: @client %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field row mb-3">
      <%= f.label :password, "パスワード(6文字以上)", class: "col-12 col-md-4 col-lg-3" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "ml-3 ml-md-0 col-md-8 col-lg-3" %>
    </div>

    <div class="field row mb-3">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-12 col-md-4 col-lg-3" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "ml-3 ml-md-0 col-md-8 col-lg-3" %>
    </div>

    <div class="actions form-group d-flex justify-content-end">
      <%= f.submit "変更", class: 'btn btn_update btn-md' %>
    </div>
  <% end %>
</div>