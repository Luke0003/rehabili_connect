<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3>パスワード再設定</h3>
  </div>
</div>

<div class="card_box">
  <%= form_with model: @client, url: client_password_path, method: :post do |f| %>
    <%= render "layouts/errors", obj: @client %>

    <div class="field row mb-3">
      <%= f.label :email, class: "col-12 col-md-4 col-lg-3" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "ml-3 ml-md-0 col-md-8 col-lg-3" %>
    </div>

    <div class="actions form-group d-flex justify-content-end">
      <%= f.submit "送信", class: 'btn btn-info btn-md mt-3 mt-lg-0' %>
    </div>
  <% end %>
</div>
