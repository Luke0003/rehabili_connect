<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container-fluid">
      <%= link_to "リハコネ", client_records_path, class: "navbar-brand text-light col-12 col-sm-3" %>
        <% if client_signed_in? %>
          <h6 class="text-light ml-3 ml-sm-5 mt-2">こんにちは、<%= current_client.client_name %>さん！</h6>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navbarNavDropdown" class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item btn">
                <%= link_to client_records_path, class: 'nav-link active text-light text-right' do %>
                  <i class="far fa-calendar-alt mr-1"></i>カレンダー
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to clients_my_page_path, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-user mr-1"></i>クライアント情報
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to destroy_client_session_path, method: :delete, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-sign-out-alt mr-1"></i>ログアウト
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>