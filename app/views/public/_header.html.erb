<header class="shadow-sm">
  <nav class="navbar navbar-expand-xl navbar-light">
    <div class="container-fluid">
      <%= link_to "リハコネ", root_path, class: "navbar-brand text-light col-12 col-sm-3" %>
        <% if client_signed_in? %>
          <h6 class="text-light ml-3 ml-sm-5 mt-2">こんにちは、<%= current_client.client_name %>さん！</h6>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navbarNavDropdown" class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item btn">
                <%= link_to root_path, class: 'nav-link active text-light text-right' do %>
                  <i class="far fa-calendar-alt mr-1"></i>カレンダー
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to clients_my_page_path, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-user mr-1"></i>マイページ
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to chat_path(current_client), class: 'nav-link active text-light text-right' do %>
                  <span class="chat_notification">
                    <i class="far fa-comment-dots mr-1"></i>チャット
                    <% if Notification.client_notifications_count(current_client) > 0 %>
                      <span class="header_chat_notification chat_notification_mark"><%= Notification.client_notifications_count(current_client) %></span>
                    <% end %>
                  </span>
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to destroy_client_session_path, method: :delete, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-sign-out-alt mr-1"></i>ログアウト
                <% end %>
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>