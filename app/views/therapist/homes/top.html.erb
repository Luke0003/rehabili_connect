<div class="col-lg-12 mx-auto">
    <div class="row">
      <h4 class="col-11 mb-3">担当クライアント一覧</h4>
      <%= link_to new_client_registration_path do %>
        <div class="new-btn">
          <i class="fas fa-plus"></i>
        </div>
      <% end %>
    </div>
    <table class="table table-hover table-borderless">
      <thead>
        <tr class="table-active">
          <th>ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.id %></td>
            <td><%= link_to client.last_name, therapist_client_path(client), class: "text-dark text-decoration-none" %></td>
            <td><%= client.email %></td>
            <th><%= render "admin/clients/client_status", client: client %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @clients %>
    </div>
  </div>
</div>