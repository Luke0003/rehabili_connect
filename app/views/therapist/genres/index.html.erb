<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3>ジャンル一覧・追加</h3>
  </div>
</div>

<div class="card_box">
<%= render "layouts/errors", obj: @genre %>
<%= form_with model: @genre, url: therapist_genres_path, class: "row mb-3" do |f| %>
  <%= f.label :genre_name, "ジャンル名", class: "col-2 mb-0 d-flex align-items-center" %>
  <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "col-2 ml-5 mr-5" %>
  <%= f.submit "  新規登録  ", class: "btn btn-success btn-md" %>
<% end %>
</div>
<div class="row">
  <table class="table table-hover col-4">
    <thead>
      <tr class="table-active">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
          <td class="text-right"><%= link_to "編集する", edit_therapist_genre_path(genre), class: "btn btn-success btn-sm" %>
          <%= link_to "削除する", therapist_genre_path(genre), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>