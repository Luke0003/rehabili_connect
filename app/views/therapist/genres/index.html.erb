<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3>ジャンル</h3>
  </div>
</div>

<div class="card_box" id="genre">
  <div class="col-md-8 mb-3">
    <h3>ジャンル登録</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "layouts/errors", obj: @genre %>
      <%= form_with model: @genre, url: therapist_genres_path, class: "row mb-3" do |f| %>
        <%= f.label :genre_name, "ジャンル名", class: "col-md-3 col-lg-2 mb-1 mb-md-0 d-flex align-items-center" %>
        <%= f.text_field :genre_name, placeholder: "ジャンル名", class: "col-md-4 mb-3 mb-md-0 ml-md-5 mr-md-5" %>
        <%= f.submit "  新規登録  ", class: "btn btn-success btn-md ml-auto ml-md-0" %>
      <% end %>
    </div>
  </div>
</div>


<div class="row table-responsive">
  <table class="table table-hover text-nowrap">
    <thead>
      <tr class="table-active">
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.genre_name %></td>
          <td class="text-right"><span id="genre_edit_<%= genre.id %>"><%= link_to "編集する", edit_therapist_genre_path(genre), class: "btn btn-success btn-sm", remote: true %></span>
          <%= link_to "削除する", therapist_genre_path(genre), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>