<div class="row mt-5">
  <div class="col-12 mb-3">
    <h4><%= @client.client_name %>さんのメニュー登録・一覧</h4>
  </div>
</div>
<%= render "layouts/errors", obj: @client_menu %>
<%= form_with model: [@client, @client_menu], url: therapist_client_client_menus_path, local: true do |f| %>
  <div class="form-group row">
    <%= f.label :menu_id, "メニュー名", class: "col-2" %>
    <%= f.select :menu_id, options_from_collection_for_select(Menu.all, :id, :menu_name), {include_blank: '選択してください'} %>
  </div>
  <div class="form-group row">
    <%= f.label :start_date, "実施日", class: "col-2" %>
    <%= f.date_field :start_date %>
  </div>
  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-success" %>
  </div>
<% end %>

<div class="row mt-3">
  <div class="col-lg-12 mx-auto">
    <div class="row">
      <h4 class="col-11 mb-3">メニュー一覧</h4>
    </div>
    <table class="table table-hover table-borderless">
      <thead>
        <tr>
          <th>ID</th>
          <th>メニュー名</th>
          <th>実施日</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @client_menus.each do |client_menu| %>
          <tr>
            <td><%= client_menu.id %></td>
            <td><%= client_menu.menu.menu_name %></td>
            <td><%= client_menu.start_date %></td>
            <td>
              <%= link_to "編集", edit_therapist_client_client_menu_path(@client, client_menu), class: "btn btn-success" %>
              <%= link_to "削除", therapist_client_client_menu_path(@client, client_menu), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @client_menus %>
    </div>
  </div>
</div>