<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3><%= @client.client_name %>さんのメニュー編集</h3>
  </div>
</div>
<%= render "layouts/errors", obj: @client_menu %>
<div class="card_box">
  <%= form_with model: [@client, @client_menu], url: therapist_client_client_menu_path, local: true do |f| %>
    <div class="form-group row">
      <%= f.label :menu_id, "メニュー名", class: "col-12 col-md-2" %>
      <%= f.select :menu_id, options_from_collection_for_select(Menu.all, :id, :menu_name), {include_blank: '選択してください'}, {class: "col-12 col-md-8"} %>
    </div>
    <div class="form-group row">
      <%= f.label :start_date, "実施日", class: "col-12 col-md-2" %>
      <%= f.date_field :start_date, class: "col-12 col-md-8" %>
    </div>
    <div class="form-group d-flex justify-content-end">
      <%= f.submit "更新", class: "btn btn_update btn-lg" %>
    </div>
  <% end %>
</div>