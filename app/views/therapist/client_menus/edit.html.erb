<div class="row mt-5">
  <div class="col-12 mb-3">
    <h4><%= @client.client_name %>さんのメニュー登録・一覧</h4>
  </div>
</div>
<%= render "layouts/errors", obj: @client_menu %>
<%= form_with model: [@client, @client_menu], url: therapist_client_client_menu_path(@client, @client_menu), local: true do |f| %>
  <div class="form-group row">
    <%= f.label :menu_id, "メニュー名", class: "col-2" %>
    <%= f.select :menu_id, options_from_collection_for_select(Menu.all, :id, :menu_name, selected: @client_menu.menu.id) %>
  </div>
  <div class="form-group row">
    <%= f.label :start_time, "実施日", class: "col-2" %>
    <%= f.date_field :start_time %>
  </div>
  <div class="form-group">
    <%= f.submit "登録", class: "btn btn-success" %>
  </div>
<% end %>