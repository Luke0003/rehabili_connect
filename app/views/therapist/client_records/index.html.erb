<div class="col-lg-12 mx-auto">
  <div class="row">
    <h4 class="col-11 mb-3"><%= @client.client_name %>さんの自主トレ記録</h4>
  </div>
  <table class="table table-hover table-borderless">
    <thead>
      <tr>
        <th>ID</th>
        <th>体調</th>
        <th>日付</th>
      </tr>
    </thead>
    <tbody>
      <% @client_records.each do |client_record| %>
        <tr>
          <td>
            <%= link_to therapist_client_client_record_path(@client, client_record) do %>
              <%= client_record.id %>
            <% end %>
          </td>
          <td><%= client_record.condition %></td>
          <td><%= client_record.record_date %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="d-flex justify-content-center">
    <%= paginate @client_records %>
  </div>
</div>