<div class="row mt-5">
  <div class="col-12 mb-3">
    <h3>自主トレメニュー詳細</h3>
  </div>
</div>
<div class="row">
<div class="card_box col-12 d-md-flex">
  <% if @menu.menu_video.attached? %>
    <div class="col-6 col-md-4">
      <video src="<%= rails_blob_path(@menu.menu_video) %>" type="video/mp4" width="200" height="300" controls></video>
    </div>
  <% else %>
    <div class="col-6 col-md-4">
      <%= image_tag "default-image.jpg", size: "200x300" %>
    </div>
  <% end %>
  <div class="table-responsive col-12 col-md-8">
  <table class="table table-borderless text-nowrap">
    <thead></thead>
    <tbody>
      <tr>
        <th scope="row" class="col-3 pl-0">メニュー名</th>
        <td><%= @menu.menu_name %></td>
      </tr>
      <tr>
        <th scope="row" class="d-flex pl-0 align-items-start">メニュー説明</th>
        <td><%= @menu.menu_content %></td>
      </tr>
      <tr>
        <th scope="row" class="d-flex pl-0 align-items-start">メニュー目的</th>
        <td><%= @menu.menu_purpose %></td>
      </tr>
      <tr>
        <th scope="row" class="col-3 pl-0">ジャンル</th>
        <td><%= @menu.genre.genre_name %></td>
      </tr>
      <tr>
        <th scope="row"></th>
        <th>
          <%= link_to "編集", edit_therapist_menu_path(@menu), class: "btn btn-success btn-lg mt-3" %>
          <%= link_to "削除", therapist_menu_path(@menu), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger btn-lg mt-3" %>
        </th>
      </tr>
    </tbody>
  </table>
  </div>
</div>
</div>

