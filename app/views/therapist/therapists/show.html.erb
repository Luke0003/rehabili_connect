<div class="row mt-3">
  <div class="col-12">
    <h4 class="mb-3">マイページ</h4>
    <div class="row">
      <div class="col-2">
        <h5 class="font-weight-bold">登録情報</h5>
      </div>
      <div>
        <%= image_tag current_therapist.get_therapist_image(50, 50) %>
      </div>
      <div>
        <%= link_to "編集する", therapist_information_edit_path, class: "btn btn-md btn-success" %>
      </div>
    </div>
    <div class="row">
      <table class="table table-bordered col-8 mt-3">
        <tr>
          <th class="table-active col-3">お名前</th>
          <td><%= current_therapist.last_name + current_therapist.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">フリガナ</th>
          <td><%= current_therapist.last_name_kana + current_therapist.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= current_therapist.email %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
