<div class="row mt-3">
  <h4 class="mb-3">新規セラピスト登録</h4>
</div>

<%= form_with model: @therapist, url: therapist_registration_path do |f| %>
  <%= render "layouts/errors", obj: @therapist %>

  <div class="field row mb-3">
    <%= f.label :last_name, "名前", class: "col-2" %>
    <%= f.label :last_name,"(姓)", class: "col-1" %>
    <%= f.text_field :last_name, autofocus: true, class: "col-3", placeholder: "名字" %>
    <%= f.label :first_name,"(名)", class: "col-1" %>
    <%= f.text_field :first_name, class: "col-3", placeholder: "名前" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :last_name_kana,"フリガナ", class: "col-2" %>
    <%= f.label :last_name_kana,"(セイ)", class: "col-1" %>
    <%= f.text_field :last_name_kana, class: "col-3", placeholder: "ミョウジ" %>
    <%= f.label :first_name_kana,"(メイ)", class: "col-1" %>
    <%= f.text_field :first_name_kana, class: "col-3", placeholder: "ナマエ" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :email,"メールアドレス", class: "col-3" %>
    <%= f.text_field :email, class: "col-3", placeholder: "therapist@gmail.com" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :password,"パスワード(6文字以上)", class: "field col-3" %>
    <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
  </div>

  <div class="field row mb-3">
    <%= f.label :password_confirmation,"パスワード(確認用)", class: "field col-3" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
  </div>

  <div class="field row mb-3">
    <div class="col-3"></div>
    <div class="actions">
      <%= f.submit "　　新規登録　　", class: 'btn btn-success btn-md'%>
    </div>
<% end %>
