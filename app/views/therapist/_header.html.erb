<header class="shadow-sm">
  <nav class="navbar navbar-expand-xl navbar-light">
    <div class="container-fluid">
      <%= link_to "リハコネ", therapist_root_path, class: "navbar-brand text-light col-12 col-sm-3" %>
        <% if therapist_signed_in? %>
          <h6 class="text-light ml-3 ml-sm-5 mt-2">こんにちは、<%= current_therapist.therapist_name %>さん！</h6>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div id="navbarNavDropdown" class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item btn">
                <%= link_to therapist_root_path, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-users mr-1"></i>担当利用者
                <% end %>
              </li>
              <li class="nav-item dropdown btn">
                <%= link_to therapist_menus_path, class: 'nav-link dropdown-toggle active text-light text-right', id: "navbarDropdown", "data-toggle": :dropdown, "aria-haspopup": :true, "aria-expanded": :false do %>
                  <i class="fas fa-running mr-1"></i>自主トレメニュー
                <% end %>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                  <%= link_to "自主トレメニュー", therapist_menus_path, class: "dropdown-item" %>
                  <%= link_to "ジャンル", therapist_genres_path, class: "dropdown-item" %>
                </div>
              </li>
              <li class="nav-item btn">
                <%= link_to therapist_my_page_path, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-user mr-1"></i>セラピスト情報
                <% end %>
              </li>
              <li class="nav-item btn">
                <%= link_to destroy_therapist_session_path, method: :delete, class: 'nav-link active text-light text-right' do %>
                  <i class="fas fa-sign-out-alt mr-1"></i>ログアウト
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</header>