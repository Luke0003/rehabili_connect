<div class="row">
  <div class="col-10 col-md-5 col-lg-4 mx-auto text-center mt-5">
    <h2 class="mb-5"><strong>管理者ログイン</strong></h2>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
      <div class="row field mb-3">
        <%= f.label :email, "メール", class: "form-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "管理者e-mail", class: "form-control" %>
      </div>

      <div class="row field mb-5">
        <%= f.label :password, "パスワード", class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "管理者パスワード", class: "form-control" %>
      </div>

      <div class="row actions">
        <%= f.submit "ログイン", class: "btn btn-info btn-lg form-control" %>
      </div>
    <% end %>
  </div>
</div>