<div class="row mt-3">
  <div class="col-lg-12 mx-auto">
    <h4 class="mb-3"><%= @therapist.last_name %><%= @therapist.first_name %>さんのセラピスト詳細</h4>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">セラピストID</th>
          <td><%= @therapist.id%></td>
        </tr>
        <tr>
          <th scope="row">氏名</th>
          <td><%= @therapist.last_name %><%= @therapist.first_name %></td>
        </tr>
        <tr>
          <th scope="row">フリガナ</th>
          <td><%= @therapist.last_name_kana %><%= @therapist.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @therapist.email %></td>
        </tr>
        <tr>
          <th scope="row">セラピストステータス</th>
          <td><%= @therapist.is_deleted %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_therapist_path, class: "btn btn-success btn-md" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>