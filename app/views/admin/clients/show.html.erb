<div class="row mt-3">
  <div class="col-lg-12 mx-auto">
    <h4 class="mb-3"><%= @client.last_name %><%= @client.first_name %>さんのクライアント詳細</h4>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">クライアントID</th>
          <td><%= @client.id%></td>
        </tr>
        <tr>
          <th scope="row">氏名</th>
          <td><%= @client.last_name %><%= @client.first_name %></td>
        </tr>
        <tr>
          <th scope="row">フリガナ</th>
          <td><%= @client.last_name_kana %><%= @client.first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= @client.email %></td>
        </tr>
        <tr>
          <th scope="row">クライアントステータス</th>
          <td><%= @client.is_deleted %></td>
        </tr>
        <tr>
          <th></th>
          <td><%= link_to "編集する", edit_admin_client_path, class: "btn btn-success btn-md" %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>