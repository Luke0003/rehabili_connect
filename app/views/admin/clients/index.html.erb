<div class="col-lg-12 mx-auto">
    <div class="row">
      <h4 class="col-11 mb-3">クライアント一覧</h4>
    </div>
    <table class="table table-hover table-borderless">
      <thead>
        <tr class="table-active">
          <th>クライアントID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>担当セラピスト</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.id %></td>
            <td><%= link_to client.last_name, admin_client_path(client), class: "text-dark text-decoration-none  border-bottom border-dark" %></td>
            <td><%= client.email %></td>
            <td><%= client.therapist.last_name %></td>
            <th><%= client.is_deleted %></th>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @clients %>
    </div>
  </div>
</div>